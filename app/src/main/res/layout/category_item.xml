<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingVertical="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:onClick="onClickSetCategory">

    <TextView
        android:id="@+id/textViewCategoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dasdsad"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewCategoryRadio"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageViewCategoryRadio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/textViewCategoryTitle"
        app:srcCompat="@drawable/ic_baseline_radio_button_unchecked_24" />
</androidx.constraintlayout.widget.ConstraintLayout>